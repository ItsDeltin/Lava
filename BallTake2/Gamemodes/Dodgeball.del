import "../BallPhysics.del";
import "../ArenaSetup.del";

rule: "[Dodgeball] Create ball"
Event.OngoingGlobal
{
    CreateBall(0);
    CreateEffect(AllPlayers(), Effect.Orb, Color.White, ballPositions[0], 0.5, EffectRev.VisibleToPositionAndRadius);
}

void CreateBall(ref define index){
    ballPositions[index] = TopPolePos; 
    ballVelocitys[index] = Vector();
    ballBounce[index] = new Trigger();
    ballTeams[index] = Team.All;
}